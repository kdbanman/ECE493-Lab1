<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ece493.kdbanman" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".kdbanman.Activities.FilterImageActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".kdbanman.Activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".kdbanman.Activities.FilterImageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".kdbanman.Activities.FilterImageActivity" />
        </activity>
    </application>

</manifest>
