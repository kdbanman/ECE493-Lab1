<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ece493.kdbanman.Activities.SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_filter_kernel_size"
        android:id="@+id/textViewKernelSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextKernelSize"
        android:editable="false"
        android:enabled="true"
        android:layout_below="@+id/textViewKernelSize"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewReadOnlyKernelSize"
        android:layout_alignBottom="@+id/editTextKernelSize"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editTextKernelSize"
        android:textColor="#000000"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:layout_toEndOf="@+id/editTextKernelSize" />

</RelativeLayout>
